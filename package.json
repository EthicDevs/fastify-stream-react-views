    "jest": "^27.5.1",
    "node-notifier": "^8.0.1 || ^9.0.0 || ^10.0.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.6.2",
    "utf-8-validate": "^5.0.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
